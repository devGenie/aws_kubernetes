{
    "variables":{
        "aws_access_key":"{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key":"{{env `AWS_SECRET_ACCESS_KEY`}}"
    },
    "builders":[{
        "type":"amazon-ebs",
        "access_key":"{{user `aws_access_key`}}",
        "secret_key":"{{user `aws_secret_key`}}",
        "region": "us-east-2",
        "source_ami": "ami-2581aa40",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "controller-{{timestamp}}"
    }],
    "provisioners":[
        {
            "type": "ansible",
            "playbook_file": "./packer/ansible/common_provisioner.yml"
        },
        {
            "type": "ansible",
            "playbook_file": "./packer/ansible/controller_provisioner.yml"
        }
    ]
}